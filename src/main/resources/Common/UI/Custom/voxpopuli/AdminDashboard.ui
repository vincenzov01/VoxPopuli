$C = "../Common.ui";

// Admin UI uses flat colors (no parchment textures)

Group {
  Anchor: (Full: 0);
  Background: #141c26(0);
  LayoutMode: Left;

  // Sidebar sinistra
  $C.@Container #Sidebar {
    Anchor: (Top: 20, Bottom: 20, Left: 20, Right: 20, Width: 240);

    Group #Title {
      Anchor: (Top: 0, Left: 0, Right: 0, Height: 54);
      Padding: (Top: 7);

      Label #Username {
        Text: "Username";
        Anchor: (Left: 0, Right: 0, Height: 31);
        Style: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
      }

      Label #RoleRole {
        Text: "Admin";
        Anchor: (Top: 31, Left: 0, Right: 0, Height: 20);
        Style: (FontSize: 12, TextColor: #b4c8c9, HorizontalAlignment: Center, VerticalAlignment: Center);
      }
    }

    Group #Content {
      Anchor: (Top: 54, Bottom: 0, Left: 0, Right: 0);
      LayoutMode: Top;
      Padding: (Full: 10);

      // Nav
      Group #TabNav {
        LayoutMode: Center;
        Anchor: (Left: 0, Right: 0);
        FlexWeight: 1;

        Group #TabNavButtons {
          Anchor: (Width: 200);
          LayoutMode: Top;

          $C.@TextButton #TabConfig {
            @Text = "Configurazione";
            @Anchor = (Width: 200);
          }

          Group { Anchor: (Height: 6); }

          $C.@TextButton #TabLogs {
            @Text = "Log Admin";
            @Anchor = (Width: 200);
          }

          Group { Anchor: (Height: 6); }

          $C.@TextButton #TabPosts {
            @Text = "Post";
            @Anchor = (Width: 200);
          }

          Group { Anchor: (Height: 6); }

          $C.@TextButton #TabMessages {
            @Text = "Messaggi";
            @Anchor = (Width: 200);
          }

          Group { Anchor: (Height: 6); }

          $C.@TextButton #TabGuilds {
            @Text = "Gilde";
            @Anchor = (Width: 200);
          }
        }
      }
    }
  }

  // Area contenuto destra
  $C.@Container #ContentArea {
    FlexWeight: 1;
    Anchor: (Top: 20, Bottom: 20, Left: 20, Right: 20,);

    Group #Title {
      Anchor: (Top: 0, Left: 0, Right: 0, Height: 38);
      Padding: (Top: 7);
      Label #ContentTitle {
        Text: "VoxPopuli Admin";
        Anchor: (Left: 0, Right: 0, Height: 31);
        Style: (FontSize: 20, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center);
      }
    }

    Group #Content {
      Anchor: (Top: 38, Bottom: 0, Left: 0, Right: 0);
      LayoutMode: Top;
      Padding: (Full: 20);

      // Config tab content
      Group #ConfigContent {
        FlexWeight: 1;
        LayoutMode: Top;
        Anchor: (Left: 0, Right: 0);
        Visible: true;

        Group {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Anchor: (Left: 0, Right: 0);
          Background: #10151e(0.7);
          Padding: (Full: 10);

          Group #AdminConfigList {
            LayoutMode: Top;
            Anchor: (Left: 0, Right: 0);

            // --- TABS ---
            Group {
              LayoutMode: Top;
              Background: #10151e(0.85);
              Padding: (Full: 18);
              Anchor: (Left: 6, Right: 6, Top: 6, Bottom: 6);

              Label {
                Text: "TAB";
                Anchor: (Height: 22);
                Style: (FontSize: 18, TextColor: #ffffff(0.92), RenderBold: true);
              }
              Group { Anchor: (Height: 8); }

              Group #RowTabsCronache {
                LayoutMode: Left;
                Anchor: (Left: 0, Right: 0, Height: 38);
                Label {
                  Text: "Cronache";
                  FlexWeight: 1;
                  Style: (FontSize: 14, TextColor: #e8f0f2(0.92), VerticalAlignment: Center);
                }
                Label #TabsCronacheValue {
                  Text: "ON";
                  Anchor: (Width: 50, Height: 38);
                  Style: (FontSize: 13, TextColor: #b4c8c9(0.92), HorizontalAlignment: Center, VerticalAlignment: Center);
                }
                $C.@SecondaryTextButton #ToggleTabsCronacheButton {
                  @Text = "Disabilita";
                  @Anchor = (Width: 120);
                }
              }

              Group { Anchor: (Height: 6); }

              Group #RowTabsMissive {
                LayoutMode: Left;
                Anchor: (Left: 0, Right: 0, Height: 38);
                Label {
                  Text: "Missive";
                  FlexWeight: 1;
                  Style: (FontSize: 14, TextColor: #e8f0f2(0.92), VerticalAlignment: Center);
                }
                Label #TabsMissiveValue {
                  Text: "ON";
                  Anchor: (Width: 50, Height: 38);
                  Style: (FontSize: 13, TextColor: #b4c8c9(0.92), HorizontalAlignment: Center, VerticalAlignment: Center);
                }
                $C.@SecondaryTextButton #ToggleTabsMissiveButton {
                  @Text = "Disabilita";
                  @Anchor = (Width: 120);
                }
              }

              Group { Anchor: (Height: 6); }

              Group #RowTabsGilda {
                LayoutMode: Left;
                Anchor: (Left: 0, Right: 0, Height: 38);
                Label {
                  Text: "Gilda";
                  FlexWeight: 1;
                  Style: (FontSize: 14, TextColor: #e8f0f2(0.92), VerticalAlignment: Center);
                }
                Label #TabsGildaValue {
                  Text: "ON";
                  Anchor: (Width: 50, Height: 38);
                  Style: (FontSize: 13, TextColor: #b4c8c9(0.92), HorizontalAlignment: Center, VerticalAlignment: Center);
                }
                $C.@SecondaryTextButton #ToggleTabsGildaButton {
                  @Text = "Disabilita";
                  @Anchor = (Width: 120);
                }
              }
            }

            // --- MESSAGES ---
            Group {
              LayoutMode: Top;
              Background: #10151e(0.85);
              Padding: (Full: 18);
              Anchor: (Left: 6, Right: 6, Top: 6, Bottom: 6);

              Label {
                Text: "MISSIVE";
                Anchor: (Height: 22);
                Style: (FontSize: 18, TextColor: #ffffff(0.92), RenderBold: true);
              }
              Group { Anchor: (Height: 8); }

              Group #RowMessagesAllowDelete {
                LayoutMode: Left;
                Anchor: (Left: 0, Right: 0, Height: 38);
                Label {
                  Text: "Consenti eliminazione";
                  FlexWeight: 1;
                  Style: (FontSize: 14, TextColor: #e8f0f2(0.92), VerticalAlignment: Center);
                }
                Label #MessagesAllowDeleteValue {
                  Text: "ON";
                  Anchor: (Width: 50, Height: 38);
                  Style: (FontSize: 13, TextColor: #b4c8c9(0.92), HorizontalAlignment: Center, VerticalAlignment: Center);
                }
                $C.@SecondaryTextButton #ToggleMessagesAllowDeleteButton {
                  @Text = "Disabilita";
                  @Anchor = (Width: 120);
                }
              }

              Group { Anchor: (Height: 6); }

              Group #RowMessagesRequireItemToSend {
                LayoutMode: Left;
                Anchor: (Left: 0, Right: 0, Height: 38);
                Label {
                  Text: "Richiedi oggetto per inviare";
                  FlexWeight: 1;
                  Style: (FontSize: 14, TextColor: #e8f0f2(0.92), VerticalAlignment: Center);
                }
                Label #MessagesRequireItemToSendValue {
                  Text: "OFF";
                  Anchor: (Width: 50, Height: 38);
                  Style: (FontSize: 13, TextColor: #b4c8c9(0.92), HorizontalAlignment: Center, VerticalAlignment: Center);
                }
                $C.@SecondaryTextButton #ToggleMessagesRequireItemToSendButton {
                  @Text = "Abilita";
                  @Anchor = (Width: 120);
                }
              }

              Group { Anchor: (Height: 6); }

              Group #MessagesRequiredItemIdToSendRow {
                LayoutMode: Left;
                Anchor: (Left: 0, Right: 0, Height: 44);

                $C.@TextField #MessagesRequiredItemIdToSendInput {
                  FlexWeight: 1;
                  Anchor: (Height: 38);
                  PlaceholderText: "Item id (es: hytale:paper)";
                }

                Group { Anchor: (Width: 12, Height: 44); }

                Label {
                  Text: "Usato solo se ON";
                  Anchor: (Width: 160, Height: 44);
                  Style: (FontSize: 12, TextColor: #b4c8c9(0.75), VerticalAlignment: Center, HorizontalAlignment: End, Wrap: true);
                }
              }
            }

            // --- POSTS ---
            Group {
              LayoutMode: Top;
              Background: #10151e(0.85);
              Padding: (Full: 18);
              Anchor: (Left: 6, Right: 6, Top: 6, Bottom: 6);

              Label {
                Text: "POST";
                Anchor: (Height: 22);
                Style: (FontSize: 18, TextColor: #ffffff(0.92), RenderBold: true);
              }
              Group { Anchor: (Height: 8); }

              Group #RowPostsRequireItemToPost {
                LayoutMode: Left;
                Anchor: (Left: 0, Right: 0, Height: 38);
                Label {
                  Text: "Richiedi oggetto per pubblicare";
                  FlexWeight: 1;
                  Style: (FontSize: 14, TextColor: #e8f0f2(0.92), VerticalAlignment: Center);
                }
                Label #PostsRequireItemToPostValue {
                  Text: "OFF";
                  Anchor: (Width: 50, Height: 38);
                  Style: (FontSize: 13, TextColor: #b4c8c9(0.92), HorizontalAlignment: Center, VerticalAlignment: Center);
                }
                $C.@SecondaryTextButton #TogglePostsRequireItemToPostButton {
                  @Text = "Abilita";
                  @Anchor = (Width: 120);
                }
              }

              Group { Anchor: (Height: 6); }

              Group #PostsRequiredItemIdToPostRow {
                LayoutMode: Left;
                Anchor: (Left: 0, Right: 0, Height: 44);

                $C.@TextField #PostsRequiredItemIdToPostInput {
                  FlexWeight: 1;
                  Anchor: (Height: 38);
                  PlaceholderText: "Item id (es: hytale:paper)";
                }

                Group { Anchor: (Width: 12, Height: 44); }

                Label {
                  Text: "Usato solo se ON";
                  Anchor: (Width: 160, Height: 44);
                  Style: (FontSize: 12, TextColor: #b4c8c9(0.75), VerticalAlignment: Center, HorizontalAlignment: End, Wrap: true);
                }
              }
            }

            // --- GUILD BOARD ---
            Group {
              LayoutMode: Top;
              Background: #10151e(0.85);
              Padding: (Full: 18);
              Anchor: (Left: 6, Right: 6, Top: 6, Bottom: 6);

              Label {
                Text: "BACHECA GILDA";
                Anchor: (Height: 22);
                Style: (FontSize: 18, TextColor: #ffffff(0.92), RenderBold: true);
              }
              Group { Anchor: (Height: 8); }

              Group #RowGuildBoardAllowPost {
                LayoutMode: Left;
                Anchor: (Left: 0, Right: 0, Height: 38);
                Label {
                  Text: "Consenti post";
                  FlexWeight: 1;
                  Style: (FontSize: 14, TextColor: #e8f0f2(0.92), VerticalAlignment: Center);
                }
                Label #GuildBoardAllowPostValue {
                  Text: "ON";
                  Anchor: (Width: 50, Height: 38);
                  Style: (FontSize: 13, TextColor: #b4c8c9(0.92), HorizontalAlignment: Center, VerticalAlignment: Center);
                }
                $C.@SecondaryTextButton #ToggleGuildBoardAllowPostButton {
                  @Text = "Disabilita";
                  @Anchor = (Width: 120);
                }
              }

              Group { Anchor: (Height: 6); }

              Group #RowGuildBoardRequireItemToPost {
                LayoutMode: Left;
                Anchor: (Left: 0, Right: 0, Height: 38);
                Label {
                  Text: "Richiedi oggetto per postare";
                  FlexWeight: 1;
                  Style: (FontSize: 14, TextColor: #e8f0f2(0.92), VerticalAlignment: Center);
                }
                Label #GuildBoardRequireItemToPostValue {
                  Text: "OFF";
                  Anchor: (Width: 50, Height: 38);
                  Style: (FontSize: 13, TextColor: #b4c8c9(0.92), HorizontalAlignment: Center, VerticalAlignment: Center);
                }
                $C.@SecondaryTextButton #ToggleGuildBoardRequireItemToPostButton {
                  @Text = "Abilita";
                  @Anchor = (Width: 120);
                }
              }

              Group { Anchor: (Height: 6); }

              Group #GuildBoardRequiredItemIdToPostRow {
                LayoutMode: Left;
                Anchor: (Left: 0, Right: 0, Height: 44);

                $C.@TextField #GuildBoardRequiredItemIdToPostInput {
                  FlexWeight: 1;
                  Anchor: (Height: 38);
                  PlaceholderText: "Item id (es: hytale:book)";
                }

                Group { Anchor: (Width: 12, Height: 44); }

                Label {
                  Text: "Usato solo se ON";
                  Anchor: (Width: 160, Height: 44);
                  Style: (FontSize: 12, TextColor: #b4c8c9(0.75), VerticalAlignment: Center, HorizontalAlignment: End, Wrap: true);
                }
              }
            }

            // --- GUILDS ---
            Group {
              LayoutMode: Top;
              Background: #10151e(0.85);
              Padding: (Full: 18);
              Anchor: (Left: 6, Right: 6, Top: 6, Bottom: 6);

              Label {
                Text: "GILDE";
                Anchor: (Height: 22);
                Style: (FontSize: 18, TextColor: #ffffff(0.92), RenderBold: true);
              }
              Group { Anchor: (Height: 8); }

              Group #RowGuildsRequireItemToCreate {
                LayoutMode: Left;
                Anchor: (Left: 0, Right: 0, Height: 38);
                Label {
                  Text: "Richiedi oggetto per creare";
                  FlexWeight: 1;
                  Style: (FontSize: 14, TextColor: #e8f0f2(0.92), VerticalAlignment: Center);
                }
                Label #GuildsRequireItemToCreateValue {
                  Text: "OFF";
                  Anchor: (Width: 50, Height: 38);
                  Style: (FontSize: 13, TextColor: #b4c8c9(0.92), HorizontalAlignment: Center, VerticalAlignment: Center);
                }
                $C.@SecondaryTextButton #ToggleGuildsRequireItemToCreateButton {
                  @Text = "Abilita";
                  @Anchor = (Width: 120);
                }
              }

              Group { Anchor: (Height: 6); }

              Group #GuildsRequiredItemIdToCreateRow {
                LayoutMode: Left;
                Anchor: (Left: 0, Right: 0, Height: 44);

                $C.@TextField #GuildsRequiredItemIdToCreateInput {
                  FlexWeight: 1;
                  Anchor: (Height: 38);
                  PlaceholderText: "Item id (es: hytale:paper)";
                }

                Group { Anchor: (Width: 12, Height: 44); }

                Label {
                  Text: "Usato solo se ON";
                  Anchor: (Width: 160, Height: 44);
                  Style: (FontSize: 12, TextColor: #b4c8c9(0.75), VerticalAlignment: Center, HorizontalAlignment: End, Wrap: true);
                }
              }
            }

            // --- ACTIONS ---
            Group {
              LayoutMode: Left;
              Anchor: (Left: 6, Right: 6, Height: 44);

              $C.@SecondaryTextButton #SaveConfigButton {
                @Text = "Salva";
                @Anchor = (Width: 180);
              }

              Group { Anchor: (Width: 12, Height: 44); }

              $C.@TextButton #ReloadConfigButton {
                @Text = "Ricarica";
                @Anchor = (Width: 180);
              }

              Group { Anchor: (Width: 12, Height: 44); }

              Label #SaveStatusLabel {
                Text: "";
                FlexWeight: 1;
                Style: (FontSize: 13, TextColor: #b4c8c9, VerticalAlignment: Center);
              }
            }

            Group { Anchor: (Height: 6); }

            Label {
              Text: "Nota: la configurazione viene salvata solo nel DB (config/voxpopuli/voxpopuli.db).";
              Anchor: (Left: 6, Right: 6, Height: 32);
              Style: (FontSize: 12, TextColor: #b4c8c9, Wrap: true);
            }
          }
        }
      }

      // Placeholder tab logs
            // --- LOGS ---
      Group #LogsContent {
        FlexWeight: 1;
        LayoutMode: Top;
        Anchor: (Left: 0, Right: 0);
        Visible: false;

        Group {
          LayoutMode: Left;
          Anchor: (Left: 0, Right: 0, Height: 44);

          $C.@SecondaryTextButton #RefreshLogsButton {
            @Text = "Aggiorna";
            @Anchor = (Width: 180);
          }

          Group { Anchor: (Width: 12, Height: 44); }

          Label #LogsStatusLabel {
            Text: "";
            FlexWeight: 1;
            Style: (FontSize: 13, TextColor: #b4c8c9, VerticalAlignment: Center);
          }
        }

        Group { Anchor: (Height: 10); }

        Group {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Anchor: (Left: 0, Right: 0);
          Background: #10151e(0.7);
          Padding: (Full: 8);

          Label #LogsText {
            Text: "";
            Anchor: (Left: 0, Right: 0, Height: 1400);
            Style: (FontSize: 12, TextColor: #e8f0f2(0.90), Wrap: true);
          }
        }
      }

      // --- POSTS ---
      Group #PostsContent {
        FlexWeight: 1;
        LayoutMode: Top;
        Anchor: (Left: 0, Right: 0);
        Visible: false;

        Group {
          LayoutMode: Left;
          Anchor: (Left: 0, Right: 0, Height: 44);
          $C.@SecondaryTextButton #RefreshPostsButton {
            @Text = "Aggiorna";
            @Anchor = (Width: 180);
          }
          Group { Anchor: (Width: 12, Height: 44); }
          Label #PostsStatusLabel {
            Text: "";
            FlexWeight: 1;
            Style: (FontSize: 13, TextColor: #b4c8c9, VerticalAlignment: Center);
          }
        }

        Group { Anchor: (Height: 10); }

        Group {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Anchor: (Left: 0, Right: 0);
          Background: #10151e(0.7);
          Padding: (Full: 8);

          Group #AdminPostList {
            LayoutMode: LeftCenterWrap;
            Anchor: (Left: 0, Right: 0);
          }
        }
      }

      // --- MESSAGGI ---
      Group #MessagesContent {
        FlexWeight: 1;
        LayoutMode: Top;
        Anchor: (Left: 0, Right: 0);
        Visible: false;

        Group {
          LayoutMode: Left;
          Anchor: (Left: 0, Right: 0, Height: 44);
          $C.@SecondaryTextButton #RefreshMessagesButton {
            @Text = "Aggiorna";
            @Anchor = (Width: 180);
          }
          Group { Anchor: (Width: 12, Height: 44); }
          Label #MessagesStatusLabel {
            Text: "";
            FlexWeight: 1;
            Style: (FontSize: 13, TextColor: #b4c8c9, VerticalAlignment: Center);
          }
        }

        Group { Anchor: (Height: 10); }

        Group {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Anchor: (Left: 0, Right: 0);
          Background: #10151e(0.7);
          Padding: (Full: 8);

          Group #AdminMessageList {
            LayoutMode: LeftCenterWrap;
            Anchor: (Left: 0, Right: 0);
          }
        }
      }

      // --- GILDE ---
      Group #GuildsContent {
        FlexWeight: 1;
        LayoutMode: Top;
        Anchor: (Left: 0, Right: 0);
        Visible: false;

        Group {
          LayoutMode: Left;
          Anchor: (Left: 0, Right: 0, Height: 44);
          $C.@SecondaryTextButton #RefreshGuildsButton {
            @Text = "Aggiorna";
            @Anchor = (Width: 180);
          }
          Group { Anchor: (Width: 12, Height: 44); }
          Label #GuildsStatusLabel {
            Text: "";
            FlexWeight: 1;
            Style: (FontSize: 13, TextColor: #b4c8c9, VerticalAlignment: Center);
          }
        }

        Group { Anchor: (Height: 10); }

        // Lista gilde
        Group {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Anchor: (Left: 0, Right: 0);
          Background: #10151e(0.7);
          Padding: (Full: 8);

          Group #AdminGuildList {
            LayoutMode: LeftCenterWrap;
            Anchor: (Left: 0, Right: 0);
          }
        }

        Group { Anchor: (Height: 10); }

        Label #SelectedGuildLabel {
          Text: "Membri gilda: (nessuna)";
          Anchor: (Height: 20);
          Style: (FontSize: 13, TextColor: #b4c8c9);
        }

        Group { Anchor: (Height: 6); }

        // Bacheca (solo gilda selezionata)
        Group {
          LayoutMode: Left;
          Anchor: (Left: 0, Right: 0, Height: 44);
          $C.@SecondaryTextButton #RefreshGuildBoardButton {
            @Text = "Aggiorna bacheca";
            @Anchor = (Width: 180);
          }
          Group { Anchor: (Width: 12, Height: 44); }
          Label #GuildBoardStatusLabel {
            Text: "";
            FlexWeight: 1;
            Style: (FontSize: 13, TextColor: #b4c8c9, VerticalAlignment: Center);
          }
        }

        Group { Anchor: (Height: 10); }

        Group {
          Anchor: (Left: 0, Right: 0, Height: 220);
          LayoutMode: TopScrolling;
          Background: #10151e(0.7);
          Padding: (Full: 8);

          Group #AdminGuildBoardList {
            LayoutMode: LeftCenterWrap;
            Anchor: (Left: 0, Right: 0);
          }
        }

        Group { Anchor: (Height: 10); }

        // Membri gilda selezionata
        Group {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Anchor: (Left: 0, Right: 0);
          Background: #10151e(0.7);
          Padding: (Full: 8);

          Group #AdminGuildMembersList {
            LayoutMode: LeftCenterWrap;
            Anchor: (Left: 0, Right: 0);
          }
        }
      }
    }
  }
}
