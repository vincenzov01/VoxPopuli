// Generated file; edit fragments in src/main/ui/voxpopuli/dashboard/
$C = "../Common.ui";

Group {
  Anchor: (Width: 1300, Height: 900);
  Background: #141c26(0.98);
  LayoutMode: Left;

  // Sidebar sinistra con container
  $C.@Container #Sidebar {
    Anchor: (Height: 900, Width: 200);

    // Titolo e dati utente
    Group #TitleArea {
      LayoutMode: Top;
      Padding: (Full: 10);
      Anchor: (Width: 200, Height: 50);
      Label #Username {
        Text: "Username";
        Anchor: (Height: 32);
        Style: (FontSize: 18, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center);
      }
    }
    Label #Guild {
      Text: "Gilda: Nessuna";
      Anchor: (Height: 22);
      Style: (FontSize: 13, TextColor: #b4c8c9, HorizontalAlignment: Center);
    }
    Label #Role {
      Text: "Ruolo: Nessuno";
      Anchor: (Height: 22);
      Style: (FontSize: 13, TextColor: #b4c8c9, HorizontalAlignment: Center);
    }

    // Tab navigation con bottoni
    Group #TabNav {
      LayoutMode: Top;
      Padding: (Left: 12, Right: 12, Top: 20);
      FlexWeight: 1;

      $C.@TextButton #TabCronache {
        @Text = "Cronache";
        Anchor: (Height: 38);
      }
      $C.@TextButton #TabMissive {
        @Text = "Missive";
        Anchor: (Height: 38);
      }
      $C.@TextButton #TabGilda {
        @Text = "Gilda";
        Anchor: (Height: 38);
      }
    }
  }

  // Area contenuto destra con container
  $C.@Container #ContentArea {
    FlexWeight: 1;
    Padding: (Full: 20);
    LayoutMode: Top;
    Background: #181f2b(0.92);

    // Titolo della tab
    Label #ContentTitle {
      Text: "Cronache";
      Anchor: (Height: 32);
      Style: (FontSize: 20, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center);
    }
