$C = "../Common.ui";

// --- CRONACHE (Post) ---
@PanelBg = #10151e(0.7);
Group #CronacheContent {
  FlexWeight: 1;
  LayoutMode: Top;
  Visible: true;
  Anchor: (Left: 0, Right: 0);

  // Nuovo post
  Group #NewPostBox {
    LayoutMode: Left;
    Anchor: (Left: 0, Right: 0, Height: 44);
    $C.@TextField #NewPostInput {
      FlexWeight: 1;
      Anchor: (Height: 38);
      PlaceholderText: "Scrivi un nuovo post...";
    }

    Group { Anchor: (Width: 12, Height: 44); }

    $C.@SecondaryTextButton #SendPostButton {
      @Text = "Pubblica";
      @Anchor = (Width: 160);
    }
  }
  Group { Anchor: (Height: 10); }
  // Lista post (bacheca)
  Group {
    FlexWeight: 1;
    LayoutMode: TopScrolling;
      ScrollbarStyle: $C.@DefaultScrollbarStyle;
    Anchor: (Left: 0, Right: 0);
    Background: @PanelBg;
    Padding: (Full: 8);

    Group #PostList {
      LayoutMode: LeftCenterWrap;
      Anchor: (Left: 0, Right: 0);
    }
  }
}